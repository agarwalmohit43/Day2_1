<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="example.mohit.com.day2_1.MyDailog">


    <ImageView
        android:id="@+id/mydialogiamgeview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/mydialogtextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mydialogiamgeview"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="TextView" />

    <Button
        android:id="@+id/mydialogbuttonview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/mydialogiamgeview"
        android:layout_alignStart="@+id/mydialogiamgeview"
        android:layout_below="@+id/mydialogtextview"
        android:layout_marginTop="18dp"
        android:text="Button"
        android:onClick="dialogprocess"/>
</RelativeLayout>
